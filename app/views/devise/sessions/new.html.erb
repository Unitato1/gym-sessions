
<div class="bg-card shadow-md rounded-lg p-6 max-w-md mx-auto">
  <h2 class="text-2xl font-bold text-center mb-6">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="flex justify-center">
      <%= f.submit "Log in", class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition" %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
  <div>
    <h1>please run seed and just use</h1>
    <h1>email: mail@test.com</h1>
    <h1>password: 12345678</h1>
  </div>
</div>
