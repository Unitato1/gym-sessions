<header class="bg-secondary p-4 mb-2 flex flex-wrap gap-2">
    <%= link_to "Workouts", workouts_path, class: "border-2 p-2 rounded-xl bg-primary text-white" %>
    <%= link_to "New Workout", new_workout_path, class: "border-2 p-2 rounded-xl bg-primary text-white" %>
    <%= link_to "Exercises", exercises_path, class: "border-2 p-2 rounded-xl bg-primary text-white" %>
    <%= link_to "New Exercise", new_exercise_path, class: "border-2 p-2 rounded-xl bg-primary text-white" %>
