<div class="bg-card p-2.5 rounded-xl flex justify-between items-center">
    <div class="flex flex-col gap-2">
        <%= link_to workout.name, workout, class: "underline text-lg" %>
        <%= link_to "@#{workout.user.email.split('@').first}", user_path(workout.user.id), class: "text-gray-500 text-sm" %>
    </div>
    <%= render "workouts/shared/links", workout: workout %>
</div>